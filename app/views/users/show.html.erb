<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
	      <%= @user.family_name %>
        <%= @user.name %> <br />
        <%= @user.patronymic %>
      </h1><br/>
    
      <pre><br />      Факультет:      <red><%= @user.faculty %></red><br />
      Кафедра:        <red><%= @user.chair %></red><br />
      Специальность:  <red><%= @user.branch %></red><br />
      Год выпуска:    <red><%= @user.year_off %></red></pre>
	<%= link_to "Места работы", about_path,
                                class: "btn btn-info" %>
    </section>	
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3 style="padding: 0px 0px 13px 0px">Мои сообщения (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
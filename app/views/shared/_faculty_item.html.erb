<li id="<%= faculty_item.id %>">
    
    <span class="namefaculty">Факультет: <red><%= faculty_item.namefaculty %></red></span>
    <span class="timestamp"><br />
      Create <%= time_ago_in_words(faculty_item.created_at) %> ago.
    </span>
  <% if current_user.admin? %>
    <%= link_to "Удалить", faculty_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: faculty_item.namefaculty %>
  <% end %>
</li>

<%= form_tag users_path, :method => 'get' do %>
  <p>
  	<%= label_tag "Фамилия" %>
    <%= text_field_tag(:family_name) %>
    <%= label_tag "Имя" %>
    <%= text_field_tag(:name) %>
    <%= label_tag "Отчество" %>
    <%= text_field_tag(:patronymic) %>
    <%= label_tag "Факультет" %>
    <%= select_tag :faculty, options_from_collection_for_select(Faculty.all, 'namefaculty', 'namefaculty'), :include_blank => true %>
    <%= label_tag "Кафедра" %>
    <%= select_tag :chair, options_from_collection_for_select(Chair.all, 'namechair', 'namechair'), :include_blank => true %>
    <%= label_tag "Специальность" %>
    <%= select_tag :branch, options_from_collection_for_select(Branch.all, 'namebranch', 'namebranch'), :include_blank => true %>
    <%= label_tag "Год поиска" %>
    <%= text_field_tag(:year_off) %>
    <%= submit_tag "Поиск", :name => nil %>
  </p>
<% end %>